{
  "name": "uniswap-v2-polkadot-dex",
  "version": "1.0.0",
  "description": "Uniswap V2-style DEX for Polkadot Asset Hub",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network paseo",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "node": "hardhat node",
    "dev": "cd frontend && npm run dev",
    "build": "hardhat compile && cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "clean": "hardhat clean",
    "interact": "hardhat run scripts/interact.js --network localhost",
    "interact:paseo": "hardhat run scripts/interact.js --network paseo"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.19.0",
    "@typechain/hardhat": "^9.1.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "keywords": [
    "defi",
    "dex",
    "uniswap",
    "polkadot",
    "blockchain"
  ],
  "author": "",
  "license": "MIT"
}