{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "tasks/**/*.ts",
    "test/**/*.ts",
    "typechain-types/**/*.ts"
  ]
}